<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/breaktimer">

    <Button
        android:id="@+id/button_newActivity"
        android:layout_width="wrap_content"
        android:layout_height="82dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="76dp"
        android:layout_marginBottom="92dp"
        android:background="@android:color/transparent" />

    <Button
        android:id="@+id/button_BackToWork"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/button_newActivity"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="74dp"
        android:background="@android:color/transparent" />

    <Button
        android:id="@+id/button_imDone"
        android:layout_width="143dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="5dp"
        android:background="@android:color/transparent"/>

    <TextView
        android:id="@+id/textView_breaktimer"
        android:layout_width="221dp"
        android:layout_height="95dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="103dp"
        android:layout_marginBottom="207dp"
        android:text="11:00"
        android:textAlignment="center"
        android:textSize="80sp"
        android:textStyle="bold" />
</RelativeLayout>